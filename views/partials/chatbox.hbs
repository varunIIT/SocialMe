<link rel="stylesheet" href="/css/chatbox.css">
<div id="chatbox">
    <div id="chat-messages">
        <div class="sender">
            <span>Your message!</span><br>
            <small>You</small>
        </div>

        <div class="receiver">
            <span>Other's message!</span><br>
            <small>xyz</small>
        </div>
    </div>
    <div id="chatbox-form">
        <input type="text" id="chat-input" {{#if user}} placeholder="Chat here..." {{else}}
            placeholder="Login to Chat here..." {{/if}}><button type="button" id="send-message">Send</button>
    </div>
</div>