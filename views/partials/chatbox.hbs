<link rel="stylesheet" href="/css/chatbox.css">
<div id="chatbox">
    <div id="chat-messages">
        <div class="sender">
            <span>Your message!</span><br>
            <small>You</small>
        </div>

        <div class="receiver">
            <span>Other's message!</span><br>
            <small>xyz</small>
        </div>
    </div>
    <div id="chatbox-form">
        <div class="input-group">
            <input type="text" id="chat-input" class="form-control" {{#if user}} placeholder="Chat here..." {{else}}
                placeholder="Login to Chat here..." {{/if}} aria-describedby="send-message">
            <button class="btn btn-outline-secondary" type="button" id="send-message">Send</button>
        </div>

    </div>
</div>