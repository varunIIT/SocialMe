<li id={{this._id}}>
    <p>
        <span>{{this.content}}</span><br>
        <small>{{this.user.name}}</small>
        {{#if (eq @root.user._id this.user._id)}}
        <small><a class="delete-comment-button" href="/comment/delete/{{this._id}}">Delete</a></small>
        {{/if}}
    </p>
</li>